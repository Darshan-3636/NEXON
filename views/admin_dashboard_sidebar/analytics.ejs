    <script>
         // Get the orders data from the server
        const orders = JSON.parse(document.getElementById('orders-data').dataset.orders);

        // Get current month and year
        const now = new Date();
        const currentMonth = now.getMonth(); // 0-indexed
        const currentYear = now.getFullYear();

        // Filter orders to only include those from the current month and year
        const currentMonthOrders = orders.filter(order => {
            if (!order.date) return false;
            const orderDate = new Date(order.date);
            return orderDate.getMonth() === currentMonth && orderDate.getFullYear() === currentYear;
        });

        // Process order statuses for Pie Chart
        const orderStatusCounts = {
            'Completed': 0,
            'Pending': 0,
            'Cancelled': 0
        };

        currentMonthOrders.forEach(order => {
            const status = order.orderStatus.toLowerCase(); // Convert to lowercase for consistency
            if (status === 'completed') {
                orderStatusCounts['Completed']++;
            } else if (status === 'pending') {
                orderStatusCounts['Pending']++;
            } else if (status === 'cancelled') {
                orderStatusCounts['Cancelled']++;
            }
        });

        // Initialize the Orders Pie Chart (Order Status Overview)
        const ordersChart = document.getElementById('ordersChart').getContext('2d');
        new Chart(ordersChart, {
            type: 'pie',
            data: {
                labels: ['Completed Orders', 'Pending Orders', 'Cancelled Orders'],
                datasets: [{
                    label: 'Orders Overview',
                    data: [orderStatusCounts['Completed'], orderStatusCounts['Pending'], orderStatusCounts['Cancelled']],
                    backgroundColor: ['#4CAF50', '#FFC107', '#F44336'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: { enabled: true }
                }
            }
        });
    
        // Process monthly sales data for Bar Chart (only for accepted orders)
        const monthlySales = {};
        const monthLabels = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
    
        // Initialize all months with zero sales
        monthLabels.forEach(month => {
            monthlySales[month] = 0;
        });
    
        // Filter orders to include only accepted orders
        const acceptedOrders = orders.filter(order => order.orderStatus.toLowerCase() === 'completed');
    
        // Initialize sales tracking for each year dynamically
        acceptedOrders.forEach(order => {
            if (order.quantity && order.productid?.price) {
                const totalAmount = order.quantity * order.productid.price;
                if (order.date) {
                    const orderDate = new Date(order.date);
                    const year = orderDate.getFullYear();
                    const monthName = monthLabels[orderDate.getMonth()];
                    
                    // Ensure the year exists in monthlySales
                    if (!monthlySales[year]) {
                        monthlySales[year] = {};
                        monthLabels.forEach(month => {
                            monthlySales[year][month] = 0;
                        });
                    }
    
                    // Add total amount to the correct month & year
                    monthlySales[year][monthName] += totalAmount;
                }
            }
        });
    
        // Convert monthlySales into an array for Chart.js
        
        const salesChartData = monthlySales[currentYear] ? Object.values(monthlySales[currentYear]) : new Array(12).fill(0);
    
        // Initialize the Sales Bar Chart (Sales Revenue by Month)
        const salesChart = document.getElementById('salesChart').getContext('2d');
        new Chart(salesChart, {
            type: 'bar',
            data: {
                labels: monthLabels, 
                datasets: [{
                    label: 'Sales Revenue (â‚¹)',
                    data: salesChartData,
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Revenue (â‚¹)'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Month'
                        }
                    }
                },
                plugins: {
                    legend: { position: 'top' },
                    tooltip: { enabled: true }
                }
            }
        });
    
    </script>
    
    

}

/* History Section */
.history-section {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    height: calc(97vh - 60px);
    overflow: hidden;
}

.history-section h1 {
    font-size: 24px;
    color: #333;
    margin-bottom: 20px;
}

.activity-filters {
    margin-bottom: 20px;
}

.activity-filters label {
    font-size: 16px;
    margin-right: 10px;
}

.activity-filters input {
    padding: 8px;
    font-size: 16px;
}

.activity-filters .filter-btn {
    padding: 8px 16px;
    background-color: #4CAF50;
    color: white;
    border: none;
    cursor: pointer;
}

.activity-filters .filter-btn:hover {
    background-color: #45a049;
}

/* History Table Styling */
.history-table {
    max-height: calc(100vh - 180px);
    overflow-y: auto;
}

.history-table table {
    width: 100%;
    border-collapse: collapse;
}

.history-table th, .history-table td {
    padding: 12px;
    text-align: left;
    font-size: 14px;
    color: #555;
}

.history-table th {
    background-color: #f5f5f5;
}

.history-table tr:nth-child(even) {
    background-color: #f9f9f9;
}

.history-table tr:hover {
    background-color: #f0f0f0;
}

.history-table td button {
    padding: 6px 12px;
    font-size: 14px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.history-table td button.view-btn {
    background-color: #4CAF50;
    color: white;
}

.history-table td button.view-btn:hover {
    background-color: #45a049;
}

.history-table td a {
    color:#555 ;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.3s ease;
}

.history-table td a:hover {
    color: #0073e6;
}

    </style>
</head>


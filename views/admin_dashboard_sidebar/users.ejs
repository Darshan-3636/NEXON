    <script >
        document.addEventListener("DOMContentLoaded", function () {
    const modal = document.getElementById("taskModal");
    const closeBtn = document.querySelector(".close");
    const assignTaskBtns = document.querySelectorAll(".assign-task-btn");
    const assignTaskForm = document.getElementById("assignTaskForm");
    const empIdInput = document.getElementById("empid");

    // Open Modal on Assign Task Click
    assignTaskBtns.forEach(btn => {
        btn.addEventListener("click", function () {
            const empId = this.getAttribute("data-empid");
            empIdInput.value = empId;
            modal.style.display = "block";
        });
    });

    // Close Modal
    closeBtn.addEventListener("click", function () {
        modal.style.display = "none";
    });

    // Close Modal if Clicked Outside
    window.addEventListener("click", function (e) {
        if (e.target === modal) {
            modal.style.display = "none";
        }
    });

    // Form Submission
    assignTaskForm.addEventListener("submit", function (e) {
        e.preventDefault();
        const formData = new FormData(assignTaskForm);

        fetch("/assigntask", {
            method: "POST",
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            alert(data.message);
            modal.style.display = "none";
        })
        .catch(error => console.error("Error:", error));
    });
});
          // Wait for the DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
    // Select all flash messages
    var flashMessages = document.querySelectorAll('.flash-message');

    // Iterate through each flash message
    flashMessages.forEach(function(message) {
      // Set a timeout to remove the message after 5 seconds (5000 milliseconds)
      setTimeout(function() {
        message.style.display = 'none';
      }, 5000);
    });
  });
    </script>
    <script>
    let deleteLinks = document.querySelectorAll('.delete-icon');
    let confirmModal = document.getElementById('confirmModal');
    let confirmDeleteButton = document.getElementById('confirmDelete');
    let cancelDeleteButton = document.getElementById('cancelDelete');
    let empIdToDelete = null;

    deleteLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault(); // prevent the immediate navigation
            empIdToDelete = this.getAttribute('data-empid');
            confirmModal.style.display = 'block';
        });
    });

    confirmDeleteButton.addEventListener('click', function() {
        if(empIdToDelete) {
            window.location.href = `/removeemp/${empIdToDelete}`;
        }
    });

    cancelDeleteButton.addEventListener('click', function() {
        confirmModal.style.display = 'none';
        empIdToDelete = null;
    });
</script>


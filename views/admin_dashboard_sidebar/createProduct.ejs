            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #f0f0f0;
            font-size: 12px;
            }

            .recent-jobs-list li:last-child {
            border-bottom: none;
            }

            .job-details {
            display: flex;
            gap: 8px;
            flex-direction: column;
            }

            .job-title {
            font-weight: bold;
            color: #444;
            font-size: 14px;
            }

            .job-time {
            color: #777;
            font-size: 12px;
            }

            .job-status {
            font-size: 10px;
            font-weight: bold;
            padding: 2px 6px;
            border-radius: 10px;
            display: inline-block;
            }

            .job-status.fresher {

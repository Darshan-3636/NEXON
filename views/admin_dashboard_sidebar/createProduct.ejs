        }

        .job-type {
            color: var(--secondary-color);
        }

        .chart {
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 18px;
            color: var(--secondary-color);
            border: 2px dashed var(--border-color);
        }
